<% if @book.errors.any? %>
<div class="" style="color:red">
  <h3>Errors</h3>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%=msg%></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with(model: @book,local: true) do |f| %>
  <p>
      <%= f.label :title%><br>
      <%= f.text_field :title%>
  </p>
  <p>
      <%= f.label :description%><br>
      <%= f.text_area :description%>
  </p>
  <p>
      <%= f.label :author%><br>
      <%= f.text_field :author%>
  </p>
  <p>
      <%= f.submit%>
  </p>
<% end %>
