<h1>Books Listed Page</h1>
<p><%= link_to "Home Page",root_path%></p>
<table>
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th colspan="3">Action</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%=book.title%></td>
      <td><%=book.description%></td>
      <td><%=book.author%></td>
      <td><%= link_to "Show",book_path(book.id),method: :get%></td>
      <td><%= link_to "Edit",edit_book_path(book.id)%></td>
      <td><%= link_to "Delete",book_path(book.id),method: :delete,data:{confirm:"Are you Sure?"}%></td>
    </tr>
    <% end %>
  </tbody>
</table>
  <p><%= link_to "Create New Book",new_book_path%></p>
