<h1 class="text-center mt-4"><%=@user.username.capitalize%>'s Profile</h1>
<%= gravetor_for @user,size: 200%>
<div class="text-center mt-4">
  <% if logged_in? && current_user== @user%>
    <% if current_user== @user%>
      <%= link_to "Edit",edit_user_path(@user.id),class: "btn btn-info btn-lg"%>
    <%end%>
    <% if current_user.admin? %>
      <%= link_to "Delete",user_path(@user.id),class: "btn btn-danger btn-lg",method: :delete,data:{confirm:"Are you sure??"}%>
    <%end%>
  <%end%>
</div>
<h3 class="text-center mt-4">Books</h3>
<%=render("books/books")%>
