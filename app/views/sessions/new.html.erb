<h1 class="text-center mt-4">User Login</h1>
<div class="container">
<div class="row justify-content-center mt-4">
  <div class="col-8">
    <%= form_with(scope: :session,url: login_path,class: "bg-info form-book",local: true) do |f| %>
      <div class="form-group row  mt-4">
          <%= f.label :email,class: "col-sm-2 col-form-label text-white"%>
          <div class="col-8">
              <%= f.email_field :email,placeholder: "Email",row: 20,class: "form-control"%>
          </div>

      </div>
      <div class="form-group row  mt-4">
          <%= f.label :password,class: "col-sm-2 col-form-label text-white"%>
          <div class="col-8">
            <%= f.password_field :password,placeholder: "Password",class: "form-control"%>
          </div>

      </div>
      <div class="form-group  mt-4 text-center" >
          <%= f.submit "Log In",class: "btn btn-outline-light justify-content-center"%>
      </div>
    <% end %>
  </div>
</div>

</div>
