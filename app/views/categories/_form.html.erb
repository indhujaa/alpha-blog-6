<div class="container">
<div class="row justify-content-center mt-4">
  <div class="col-8">
    <%= render "shared/errors",obj: @category%>
    <%= form_with(model: @category,class: "bg-info form-book",local: true) do |f| %>
      <div class="form-group row mt-4">
          <%= f.label :name,class: "col-sm-2 col-form-label text-white"%>
          <div class="col-8">
              <%= f.text_field :name,placeholder: "Name",class: "form-control"%>
          </div>

      </div>
      <div class="form-group  mt-4 text-center" >
          <%= f.submit class: "btn btn-outline-light justify-content-center"%>
      </div>
    <% end %>
  </div>
</div>

</div>
